Compass.ErpApp.Widgets.<%=class_name%> = {
	addWidget:function(){
        Ext.getCmp('knitkitCenterRegion').addContentToActiveCodeMirror('<%%= render_widget :<%=file_name%> %>');
	}
}

Compass.ErpApp.Widgets.AvailableWidgets.push({
    name:'<%= description %>',
    iconUrl:'<%= icon_url %>',
    onClick:Compass.ErpApp.Widgets.<%=class_name%>.addWidget,
    about:"<%= description %>"
});