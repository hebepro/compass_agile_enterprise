<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml2/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="generator" content="Knitkit - Compass AE Open source content management platform"/>

  <meta name="description" content=""/>
  <meta name="keywords" content=""/>
  <meta name="copyright" content="&copy;"/>
  <meta name="robots" content="ALL"/>
  <meta name="language" content="English"/>

  <title><%= @website.title %></title>

  <%= javascript_include_tag :application %>

  <!-- bootstrap -->
  <%= static_javascript_include_tag 'knitkit/bootstrap.min.js' %>
  <%= static_javascript_include_tag 'knitkit/theme.js' %>
  <%= static_javascript_include_tag 'knitkit/bootstrap-datepicker.js' %>
  <%= static_javascript_include_tag 'knitkit/confirm-bootstrap.js' %>

  <%= static_stylesheet_link_tag 'knitkit/bootstrap.min.css' %>
  <%= static_stylesheet_link_tag 'knitkit/bootstrap-responsive.min.css' %>
  <%= static_stylesheet_link_tag 'knitkit/custom.css' %>
  <%= static_stylesheet_link_tag 'knitkit/datepicker.css' %>
  <!-- end bootstrap -->

  <%= static_javascript_include_tag('erp_app/utility.js') %>
  <%= static_javascript_include_tag('erp_app/jquery_support.js') %>
  <%= static_javascript_include_tag('erp_app/widgets.js') %>

</head>
<body>

<div id="wrap">

  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-header pull-left">
      <a class="navbar-brand" href="/home"><img src="/images/knitkit/logo.png" alt="Logo"/></a>
    </div>

    <div class="navbar-header pull-right">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <%= render_widget :login,
                      :action => :login_header,
                      :params => {:login_url => '/login', :signup_url => '/sign-up'} %>

    <div class="container" id="header">
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <%= content_for?(:menu) ? yield(:menu) : render_menu(@contents) %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Wrap all page content here -->

  <div class="content-area">
    <%= yield %>
  </div>

</div>

<div id="footer" class="footer">
  <%= content_for?(:footer) ? yield(:footer) : (render :partial => 'shared/knitkit/footer') %>
  <%= yield :foot %>
</div>

</body>
</html>

